<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reciply.Recipes">
    <ContentPage.Content>
        <StackLayout>
            <Frame 
            BackgroundColor="#2196F3" 
            Padding="24" 
            CornerRadius="0"/>
            
            <Button 
            Text="Eigene Rezepte" 
            Margin="10,0,10,0" 
            BackgroundColor="#70DBFF" 
            CornerRadius="10" 
            TextTransform="None" 
            HeightRequest="60"/>
            
            <Button 
            Text="Favoriten" 
            Margin="10,0,10,0" 
            BackgroundColor="#70DBFF" 
            CornerRadius="10" 
            TextTransform="None" 
            HeightRequest="60"/>
            
            <Button 
            Text="Gekochte Rezepte" 
            Margin="10,0,10,0" 
            BackgroundColor="#70DBFF" 
            CornerRadius="10" 
            TextTransform="None" 
            HeightRequest="60"/>

            <Button 
            Text="Entdecken" 
            Margin="10,0,10,0" 
            BackgroundColor="#70DBFF" 
            CornerRadius="10" 
            TextTransform="None" 
            HeightRequest="60"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>