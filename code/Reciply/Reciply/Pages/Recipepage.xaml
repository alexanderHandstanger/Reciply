<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reciply.Pages.RecipePage">
    <NavigationPage.TitleView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Button 
                Grid.Column="0"
                ImageSource="home"
                BackgroundColor="Transparent"
                Clicked="Home_Button_Clicked"/>
            <Label 
                Grid.Column="1" 
                Text="Test Username"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalTextAlignment="Center"/>
            <!--TODO Add login/logout here with keycloak-->
            <Button 
                Grid.Column="2" 
                ImageSource="logout"
                BackgroundColor="Transparent"
                Margin="0,0,10,0"/>
            <Button 
                Grid.Column="3"
                ImageSource="settings"
                BackgroundColor="Transparent"
                Margin="0,0,10,0"/>
        </Grid>
    </NavigationPage.TitleView>
    
    
    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#70DBFF" Padding="5" CornerRadius="0">
                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>

            <Label 
                Text="Zutaten:"
                FontAttributes="Bold"
                FontSize="20" 
                Margin="10,0"/>

            <!-- TODO fix refresh bug -->
            <ListView
            IsVisible="true"
            x:Name="Ingredients"
            Margin="10"
            HeightRequest="200"
            ItemsSource="{Binding ingredients}"
            CachingStrategy="RecycleElement"
            SeparatorColor="Transparent"
            BackgroundColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Item}"/>
                                <Label Text="{Binding Amount}"/>
                                <Label Text="{Binding UnitOfMeasurement}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label 
                Text="Portionen:"
                FontAttributes="Bold"
                FontSize="20"
                Margin="10,0"/>
            <Label x:Name="Portions" Text="{Binding Portion}" Margin="10,0"/>

            <Grid Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="+" Clicked="AddPortion"/>
                <Button Grid.Column="1" Text="-" Clicked="RemovePortion"/>
            </Grid>

            <Label 
                Text="Dauer:"
                FontAttributes="Bold"
                FontSize="20"
                Margin="10,0"/>
            <Label Text="{Binding Duration}" Margin="10,0"/>

            <Label 
                Text="Tags:"
                FontAttributes="Bold"
                FontSize="20"
                Margin="10,0"/>
            <Label Text="{Binding Tags}" Margin="10,0"/>

            <Label 
                Text="Beschreibung:"
                FontAttributes="Bold"
                FontSize="20"
                Margin="10,0"/>
            <Label Text="{Binding Description}" Margin="10,0"/>

            <Label 
                Text="Zubereitung:"
                FontAttributes="Bold"
                FontSize="20"
                Margin="10,0"/>
            <Label Text="{Binding Preparation}" Margin="10,0"/>

            <Grid Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button 
                    Text="Jetzt Kochen" 
                    Clicked="JetztKochen_Button_Clicked"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,0" 
                    BackgroundColor="#38DA38" 
                    CornerRadius="10" 
                    TextTransform="None"               
                    HeightRequest="60"/>
                <Button 
                    Text="Zur Einkaufsliste hinzufügen" 
                    Clicked="AddToShoppingList"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,0,0" 
                    BackgroundColor="#38DA38" 
                    CornerRadius="10" 
                    TextTransform="None"               
                    HeightRequest="60"/>
                <Button 
                    Text="Nur zu Ausgewählten Rezepte hinzufügen" 
                    Clicked="AddToSelectedRecipes_Button_Clicked"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,0" 
                    BackgroundColor="#38DA38" 
                    CornerRadius="10" 
                    TextTransform="None"               
                    HeightRequest="60"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>